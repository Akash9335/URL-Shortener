<!DOCTYPE html>
<html lang="en">
<head>
<style>
    *{
        margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
    }
    body{
        flex-direction: column;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: blueviolet;
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
    }
    th{
        font-size: 1rem;
            color: #fff;
            text-align: center;
    }
    tr{
        border:2px solid rgb(200, 56, 56);
        background-color:rgb(246, 16, 246);
    }
    button{
        width: 50%;
            height: 40px;
            border-radius: 40px;
            background-color: rgb(255,255,255,1);
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.4s ease;
    }
    button:hover{
        background-color: rgb(255,255,255,0.5);
    }
    .inputbox{
            position: relative;
            margin: 10px 0;
            width: 400px;
            border-radius: 40px;
    }
    .inputbox label{
            position: absolute;
            top:50%;
            left: 5px;
            transform: translateY(-50%);
            color: #fff;
            font-size: 1rem;
            pointer-events: none;
            transition: all 0.5s ease-in-out;
            border: 2px solid #fff;
            
        }
        input:focus ~ label,
        input:valid ~ label {
            top: -5px;
        }
    .inputbox input{
        width: 100%;
        height: 60px;
        background: rgb(223, 203, 203);
        border: none;
        outline: none;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.4s ease;
        display: flex;
        justify-content: center;
    }
    .inputbox ion-icon{
        position: absolute;
        right: 8px;
        color: #0c0303;
        font-size: 1.2rem;
        top: 20px;
    }
    .table{
        margin: 10px;
        width: 50%;
        border:2px solid rgb(247, 242, 242);
        background-color:rgb(184, 93, 207);
    }
    .formdata{
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    
</head>
<body>
    <!-- <ol>
        ${allurls.map((url)=>
            `<li> ${url.shortId} - ${url.redirectURL} - ${url.visitHistory.length} </li>`).join("")}
    </ol> -->
    <h1>WELCOME TO URL SHORTNER</h1>
    <div>
        <% if (locals.id) { %>
            <p>URL Generated: http://localhost:8001/url/<%= id %></p>
        <% } %>
    </div>
    <div class="formdata">
        <form method="post" action="/url"> 
            <div class="inputbox">
                <ion-icon name="mail-outline"></ion-icon>     
                <label>ENTER YOUR ORIGINAL URL</label>
                <input class="inputbox" type="text" name="url" placeholder="https://example.com">
            </div>
            <div>
                <button type="submit">Generate</button>
            </div>   
        </form>
    </div>
    <div class="table">
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S.no</th>
                        <th>ShortIds</th>
                        <th>RedirectURL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= url.shortId %> </td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>